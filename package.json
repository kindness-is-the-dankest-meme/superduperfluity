{
  "name": "superduperfluity",
  "version": "1.0.0",
  "description": "Real-Time Multi-User State Management for the Collaborative Web",
  "private": true,
  "type": "module",
  "targets": {
    "client": {
      "source": "src/client/index.html",
      "distDir": "dist/client"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:client": "parcel --target client",
    "dev:server-watch": "tsc -b --watch --preserveWatchOutput",
    "dev:server-restart": "nodemon dist/server/index.js",
    "dev": "concurrently \"npm:dev:*\"",
    "build:client": "parcel build --target client",
    "build:server": "tsc -b",
    "build": "concurrently \"npm:build:*\"",
    "start": "node dist/server/index.js",
    "preview:client": "serve dist/client",
    "preview:server": "npm start",
    "preview": "concurrently \"npm:preview:*\"",
    "prepreview": "npm run build"
  },
  "keywords": [
    "Real-Time",
    "Multi-User",
    "State",
    "Management",
    "Collaborative",
    "Web",
    "Matt Hayes",
    "Wizards of the Coast",
    "OpenJS World",
    "The Linux Foundation",
    "Open Source Summit",
    "North America",
    "2023"
  ],
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "dependencies": {
    "evt": "^2.4.18",
    "immer": "^9.0.21",
    "wrtc": "^0.4.7",
    "ws": "^8.13.0",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.10",
    "@types/node": "^18.15.11",
    "@types/ws": "^8.5.4",
    "buffer": "^5.7.1",
    "concurrently": "^8.0.1",
    "events": "^3.3.0",
    "nodemon": "^2.0.22",
    "parcel": "^2.8.3",
    "process": "^0.11.10",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "serve": "^14.2.0",
    "stream-http": "^3.2.0",
    "typescript": "^5.0.4",
    "url": "^0.11.0"
  }
}
